{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "typeRoots": [
      "./src/shared/types",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false
  }
}
